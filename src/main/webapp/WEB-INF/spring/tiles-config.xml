		<put-attribute name="footer" value="/WEB-INF/views/partials/memberparts/memberfooter.jsp"/>
	</definition>
	<!-- 일반회원 -->
	
	
	<!--  기업회원 타일즈 -->
	<definition name="entTemplate" template="/WEB-INF/views/partials/entparts/entpage.jsp">
		<put-attribute name="navbar" value="/WEB-INF/views/partials/entparts/entnavbar.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/partials/entparts/entfooter.jsp"/>
	</definition>
	<!--  기업회원 타일즈 -->
	
	<!-- 관리자 타일즈 -->
	<definition name="adminTemplate" template="/WEB-INF/views/partials/adminparts/adminPage.jsp">
		<put-attribute name="navbar" value="/WEB-INF/views/partials/adminparts/adminNavBar.jsp"/>
		<put-attribute name="sidebar" value="/WEB-INF/views/partials/adminparts/adminSideBar.jsp"/>
	</definition>
	<!-- 관리자 타일즈 -->
	
	
<!-- 	<definition name="/" extends="memberTemplate">
		<put-attribute name="membercontent" value="/WEB-INF/views/{1}.jsp"/>
	</definition> -->
	
	<!-- 일반회원 -->
	<definition name="sample/*" extends="memberTemplate">
		<put-attribute name="membercontent" value="/WEB-INF/views/sample/{1}.jsp"/>
	</definition>	
	
	<definition name="idpwfind/*" extends="memberTemplate">
		<put-attribute name="membercontent" value="/WEB-INF/views/idpwfind/{1}.jsp"/>
	</definition>	
	
	
	<!-- 일반회원 -->
	<definition name="member/*" extends="memberTemplate">
		<put-attribute name="membercontent" value="/WEB-INF/views/member/{1}.jsp"/>
	</definition>	
	
	<definition name="member/*/*" extends="memberTemplate">
		<put-attribute name="membercontent" value="/WEB-INF/views/member/{1}/{2}.jsp"/>
	</definition>
	<!-- 일반회원 -->
	
	<!-- 기업회원 -->
	<definition name="enterprise/*" extends="entTemplate">
		<put-attribute name="entcontent" value="/WEB-INF/views/enterprise/{1}.jsp"/>
	</definition>
	
	<definition name="enterprise/*/*" extends="entTemplate">
		<put-attribute name="entcontent" value="/WEB-INF/views/enterprise/{1}/{2}.jsp"/>
	</definition>
	<!-- 기업회원 -->

	<!-- 관리자 -->
	<definition name="admin/*" extends="adminTemplate">
		<put-attribute name="adminContent" value="/WEB-INF/views/admin/{1}.jsp"/>
	</definition>
	
	<definition name="admin/*/*" extends="adminTemplate">
		<put-attribute name="adminContent" value="/WEB-INF/views/admin/{1}/{2}.jsp"/>
	</definition>
	<!-- 관리자 -->
	
	
