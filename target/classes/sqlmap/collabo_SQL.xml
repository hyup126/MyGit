	<insert id="insertCollabo" parameterType="collaboVO">
		INSERT INTO collabo (
			co_pst_no,
			co_pst_ttl,
			co_pst_wrtr,
			co_pst_cn,
			co_wrt_dt,
			co_telno
		)
		VALUES (
			seq_collabo.nextval,
			#{coPstTtl},
			#{coPstWrtr},
			#{coPstCn},
			TO_CHAR(sysdate, 'YYYY-MM-DD'),
			#{coTelno}
		)
	</insert>

</mapper>